<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lauzon.levis.mag.Models.ModelPanel"
    android:background="#ffffb700">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CrÃ©er un nouveau Model"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.24"
            android:onClick="changeDisplayToCreateModel"
            android:background="#d59900"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir vos Models"
            android:id="@+id/button6"
            android:layout_weight="0.24"
            android:onClick="changeDisplayToViewModels"
            android:background="#d59900"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supprimer Model(s)"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.24"
            android:onClick="changeDisplayToDeleteModel"
            android:background="#d59900"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:id="@+id/modelPanelReturn"
            android:layout_weight="0.24"
            android:background="#d59900"
            android:layout_marginTop="5dp"
            android:onClick="changeDisplayToActivity" />
    </LinearLayout>
</RelativeLayout>
