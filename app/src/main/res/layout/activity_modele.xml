<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lauzon.levis.mag.entrainement.Modele">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom du ModÃ¨le :"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnommodele"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre d&apos;exercices :"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtnommodele"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnajouterexercice"
        android:background="@drawable/custombutton"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="newExercice"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_alignBaseline="@+id/textView2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:id="@+id/btnenregistrer"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/btnannuler"
        android:layout_alignTop="@+id/btnenregistrer"
        android:layout_toEndOf="@+id/btnenregistrer"
        android:layout_marginStart="31dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/btnajouterexercice"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnenregistrer"
        android:layout_alignEnd="@+id/btnannuler"
        android:fillViewport="false"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nbreExer"
        android:layout_alignTop="@+id/btnajouterexercice"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toLeftOf="@+id/btnajouterexercice"
        android:nestedScrollingEnabled="false"
        android:numeric="integer" />

</RelativeLayout>
